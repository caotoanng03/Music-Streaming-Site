extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1 General Setting

    +alert-error(5000)
    +alert-success(5000)

    form(
        action=`/${prefixAdmin}/settings/general?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="websiteName") Website Name
            input(
                type="text"
                class="form-control"
                id="websiteName"
                name="websiteName"
                value=(settingGeneral ? settingGeneral.websiteName : "")
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="logo") Logo
            input(
                type="file"
                class="form-control-file"
                id="logo"
                name="logo"
                accept="image/*"
                upload-image-input
            )
            img(
                src=(settingGeneral ? settingGeneral.logo : "")
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group")
            label(for="phone") Phone Number
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=(settingGeneral ? settingGeneral.phone : "")
            )
        div(class="form-group")
            label(for="email") Email
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=(settingGeneral ? settingGeneral.email : "")
            )
        div(class="form-group")
            label(for="address") Address
            input(
                type="text"
                class="form-control"
                id="address"
                name="address"
                value=(settingGeneral ? settingGeneral.address : "")
            )
        div(class="form-group")
            label(for="map") Map
            input(
                type="text"
                class="form-control"
                id="map"
                name="map"
                value=(settingGeneral ? settingGeneral.map : "")
            )
        div(class="form-group")
            label(for="instagram") Instagram URL
            input(
                type="text"
                class="form-control"
                id="instagram"
                name="instagram"
                value=(settingGeneral ? settingGeneral.instagram : "")
            )
        div(class="form-group")
            label(for="linkedin") Linkedin URL
            input(
                type="text"
                class="form-control"
                id="linkedin"
                name="linkedin"
                value=(settingGeneral ? settingGeneral.linkedin : "")
            )
        div(class="form-group")
            label(for="facebook") Facebook URL
            input(
                type="text"
                class="form-control"
                id="facebook"
                name="facebook"
                value=(settingGeneral ? settingGeneral.facebook : "")
            )
        div(class="form-group")
            label(for="copyright") Copyright
            input(
                type="text"
                class="form-control"
                id="copyright"
                name="copyright"
                value=(settingGeneral ? settingGeneral.copyright : "")
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Update