extends ../../layouts/default.pug

block main 
    h1(class="mb-4")= pageTitle


    form(
        action=`/${prefixAdmin}/genres/create`
        method="POST"
        enctype="multipart/form-data"
    )   

        div(class="form-group")
            label(for="title") Title 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )

        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Image
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )

        div(class="form-group")
            label(for="desc") Description
            textarea(
                class="form-control"
                name="desc"
                id="desc"
                textarea-mce
            )

        div(class="form-group form-check form-check-inline")
            input(
                id="active" 
                class="form-check-input"
                type="radio" 
                name="status" 
                value="active"
                checked
            )
            label(for="active" class="form-check-label") Active 

        div(class="form-group form-check form-check-inline")
            input(
                id="inactive" 
                class="form-check-input"
                type="radio" 
                name="status" 
                value="inactive"
            )
            label(for="inactive" class="form-check-label") Inactive 

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Add