extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/moment.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head(pageTitle)

        .row
            each item in favoriteSongs
                .col-6.mb-3
                    div(class="song-item")
                        div(class="inner-image")
                            a(href=`/songs/detail/${item.songInfo.slug}`)
                                img(src=item.songInfo.avatar)
                        div(class="inner-content")
                            div(class="inner-title")
                                a(href=`/songs/detail/${item.songInfo.slug}`) #{item.songInfo.title}
                            div(class="inner-singer") <i class="fa-solid fa-microphone-lines"></i> #{item.singerInfo.fullName}
                            div(class="inner-heart active" button-favorite=item.songId)
                                <i class="fa-regular fa-heart"></i> Favorite
                            div(class="inner-time") 
                                <i class="fa-regular fa-clock"></i> 
                                    +formatDate(item.songInfo.createdAt)