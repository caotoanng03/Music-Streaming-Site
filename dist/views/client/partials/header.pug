        .row.align-items-center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src=settingGeneral.logo alt="Logo")

            .col-5
                .box-search
                    form(
                        action="/search/result"
                        method="GET"
                    )
                        div(class="form-group d-flex mb-0")
                            input(
                                type="text"
                                placeholder="Search..."
                                class="form-control"
                                name="keyword"
                                value=keyword
                            )
                            button(
                                type="submit"
                                class="btn btn-dark"
                            ) <i class="fa-solid fa-magnifying-glass"></i>
                    .inner-suggest
