            .col-4
                .inner-menu
                    ul
                        li
                            a(href="/") Home
                        li
                            a(href="/genres") Genre
                        li 
                            a(href="/favorite-songs") Favorite

                        //- dropdown profile
                        img(
                            class="user-pic" 
                            src=(user && user.avatar? user.avatar: "/images/default-user.png") 
                            alt=(user && user.avatar? user.fullName: "default user image")
                        )

                        .sub-menu-wrap
                            .sub-menu
                                if(user)
                                    .user-info
                                        img(src=(user && user.avatar? user.avatar: "/images/default-user.png"))
                                        h6 #{user && user.fullName ? user.fullName : "Unloggedin User"}
                                    hr 

                                    +link-item("/user/profile", "Profile Settings")
                                    +link-item("/user/logout", "Logout")
                                else 
                                    +link-item("/user/register", "Register/Login")

